<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.board.domain.comment.CommentMapper">
    <sql id="commentColumns">
        id
        , post_id
        , content
        , writer
        , delete_Yn
        , created_date
        , modified_date
    </sql>

    <!-- 댓글 저장 -->
    <insert id="save" parameterType="com.study.board.domain.comment.CommentRequest" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_comment (
            <include refid="commentColumns"></include>
        ) values (
          #{id}
        , #{postId}
        , #{content}
        , #{writer}
        , 0
        , NOW()
        , NULL
        )
    </insert>
    <update id="update">
        UPDATE tb_comment
        SET
              modified_date = NOW()
            , content = #{content}
            , writer = #{writer}
        WHERE
            id = #{id}
    </update>

    <!-- 상세 정보-->
    <select id="findById" parameterType="Long" resultType="com.study.board.domain.comment.CommentResponse">
        SELECT
            <include refid="commentColumns"></include>
        FROM
            tb_comment
        WHERE
            id = #{value}

    </select>

    <!-- 댓글 삭제 -->
    <delete id="deleteById" parameterType="Long">
        UPDATE tb_comment
        SET
            delete_yn = 1
        WHERE
            id = #{id}
    </delete>

    <!-- 댓글 리스트 조회 -->
    <select id="findAll" parameterType="long" resultType="com.study.board.domain.comment.CommentResponse">
    SELECT
        <include refid="commentColumns"></include>
    FROM
        tb_comment
    WHERE
        delete_yn = 0
        AND post_id = #{value}
        ORDER BY
            id DESC
    </select>
</mapper>